{
  "name": "monitor-system",
  "version": "0.0.0",
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "ng": "ng",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "//開發環境": "啟動[npm start] ",
    "start": "ng serve --configuration=development --host 0.0.0.0 --port 4200",
    "start:fast": "ng serve --configuration=development --disable-host-check --live-reload=false --hmr=false",
    "build": "不建置",
    "//測試環境": "啟動[npm run start:test] / 建置[npm run build:test]",
    "start:test": "ng serve --configuration=test --host 0.0.0.0 --port 4200",
    "start:test:fast": "ng serve --configuration=test --disable-host-check --live-reload=false --hmr=false",
    "build:test": "ng build --configuration=test",
    "//正式環境": "啟動 [npm run start:prod] / 建置 [npm run build:prod]",
    "start:prod": "ng serve --configuration=production --host 0.0.0.0 --port 4200",
    "start:prod:fast": "ng serve --configuration=production --host 0.0.0.0 --port 4200 --live-reload=false --hmr=false",
    "build:prod": "ng build --configuration=production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~19.0.0",
    "@angular/cdk": "^19.0.0",
    "@angular/common": "~19.0.0",
    "@angular/compiler": "~19.0.0",
    "@angular/core": "~19.0.0",
    "@angular/forms": "~19.0.0",
    "@angular/material": "^19.0.0",
    "@angular/platform-browser": "~19.0.0",
    "@angular/platform-browser-dynamic": "~19.0.0",
    "@angular/platform-server": "~19.0.0",
    "@angular/router": "~19.0.0",
    "ag-grid-angular": "^33.0.0",
    "ag-grid-community": "^33.0.0",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.10.5",
    "chart.js": "^4.5.0",
    "crypto-js": "^4.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "jwt-decode": "^4.0.0",
    "monitor-system": "file:",
    "ng2-charts": "^5.0.4",
    "rxjs": "^7.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.12",
    "@angular/cli": "~19.0.0",
    "@angular/compiler-cli": "~19.0.0",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "^5.5.0"
  }
}
